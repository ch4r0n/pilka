{% extends 'SkokiOrlikBundle::layout.html.twig' %}

{% block title %}Orlik News{% endblock %}

{% block content_header '' %}


        {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}
        {#{% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': 'foo'} %}#}
        {#<a href="{{ path('_orlik_login') }}">Zaloguj</a>#}
        {% block content %}

            <div class="homepage block-data">
                <div class="next-tab-button"><a href="#" onclick="nextRound();" class="button">Następne »</a></div>
                <div class="prev-tab-button"><a href="#" onclick="prevRound();" class="button">« Poprzednie</a></div>
                <h2>Spotkania:</h2>
                <div class="content">
                {{ render(controller('SkokiOrlikBundle:Timetable:shortMatchList', { 'matches': matches })) }}
                </div>
            </div>
            <div class="homepage block-data">
                <h2 class="title">Aktualności</h2>
                <div class="content">
                {% block fsi_news_content %}
                    {{ render(controller('fsi_news.controller.news:latestNewsAction', {'count' : 3})) }}
                {% endblock fsi_news_content %}
                </div>
            </div>
        </div>
        {% endblock content %}


