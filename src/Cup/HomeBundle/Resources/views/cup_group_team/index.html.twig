{% extends '::base.html.twig' %}

{% block body -%}
    <h1>cup_group_team list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Place</th>
                <th>Group</th>
                <th>Team</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cup_group_team_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.place }}</td>
                <td>
                {{ entity.cupGroup.name }}
                </td>
                <td>
                {{ entity.cupTeam.name }}
                </td>
                <td>
                    <ul style="display: inline;">
                        <li>
                            <a href="{{ path('cup_group_team_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cup_group_team_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cup_group_team_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
